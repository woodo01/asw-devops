apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: alertmanager-ingress-route
  namespace: {{ NAMESPACE }}
spec:
  entryPoints:
    - web
  routes:
    - match: Host(`alertmanager.{{ ROUTE53_DOMAIN }}`)  # Replace with your domain
      kind: Rule
      services:
        - name: monitoring-kube-prometheus-alertmanager  # Replace with your Alertmanager service name
          port: 9093
